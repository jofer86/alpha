<table class="table">
  <thead>
    <tr>
      <th> ID </th>
      <th> Title </th>
      <th> Description </th>

      <th>Created by</th>      
    </tr>
  </thead>
  <tbody>
  <% obj.each do |article| %>
    <tr>
      <td> <%= article.id %> </td>
      <td> <%= article.title%> </td>
      <td> <%= article.description%> </td>

      <td> <p> Created by:  <%= article.user.username %>, last updated: <%= time_ago_in_words(article.updated_at) %> ago </p> </td>
      <td> <%= link_to "Go", article_path(article.id) %>  </td>
    <% if logged_in? && current_user == article.user %>  
      <td> <%= link_to "Edit", edit_article_path(article) %>  </td>
      <td> <%= link_to "Delete", article_path(article), method: :delete %>  </td>
    <% end %>

    </tr>
  </tbody>
  <% end %>
</table>


