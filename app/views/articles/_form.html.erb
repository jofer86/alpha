<div class="section">
  <%= simple_form_for @article do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: {class: 'input'}, wrapper: false, label_html: { class: 'label'} %> 
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :description, input_html: { class: 'textarea' },  wrapper: false, label_html: { class: 'label'} %>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <%= f.button :submit, class: "button is-primary" %>
    </div>
    <div class="control">
      <button class="button"> <%= link_to "Cancel", articles_path %> </button>
    </div>
  </div>
  <% end %>
</div>